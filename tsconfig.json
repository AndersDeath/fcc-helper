{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build/",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}